pipeline {
  agent slave1
    stages {
      stage('checkout') {
        steps {
         checkout scm
          } 
          }
      stage('build') {
        steps {
         sh "${gradleHome}/bin/gradle build"
        }
      }    
    }
    post {
      success {
       addBadge(icon: 'green.gif', text: 'SUCCESS')
      }
      failure {
       addBadge(icon: 'red.gif', text: 'FAILURE')
      }
    }
}
