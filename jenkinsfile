pipeline {
  agent {
   label 'slave'
  }
  tools {
   gradle 'gradle4'
  }
    stages {
      stage('checkout') {
        steps {
         checkout scm
          } 
          }
      stage('build') {
        steps {
         echo "Path is" + env.PATH
         sh "gradle clean build"
        }
      }  
      stage('unit-test') {
        steps {
          sh 'gradle test'
          junit "build/test-results/junit-platform/*.xml"
        }
      }
      stage('func-test') {
        parallel{
          stage('First-test') {
            def tests = ["one" : { sh "sh "test-data/int-test.shbuild/libs/oto-gradle-1.0.jar nastya 'Hello Nastya!'""},
                         "two" : { sh "sh "test-data/int-test.shbuild/libs/oto-gradle-1.0.jar playTika 'Hello Playtika!'""},
                         "three" : { sh "sh "test-data/int-test.shbuild/libs/oto-gradle-1.0.jar world 'Hello World!'""}]
              
            }
          }
        }
      }
    }
    post {
      success {
       addBadge(icon: 'green.gif', text: 'SUCCESS')
      }
      failure {
       addBadge(icon: 'red.gif', text: 'FAILURE')
      }
    }
}
